{
  "semi": false,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "endOfLine": "auto",
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "jsxSingleQuote": true,
  "jsxBracketSameLine": false,
  "useTabs": true,
  "overrides": [
    {
      "files": "**/*.{yaml,yml}",
      "options": {
        "parser": "yaml",
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "**/*.md",
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
